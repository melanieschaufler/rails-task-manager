<h1>My Tasks</h1>

<ul>
<% @tasks.each do |task| %>
  <% if task.completed == true %>
    <li>[x]
      <!-- Goes to show -->
      <%= link_to task.name, task_path(task) %>
      <%= link_to "x", task_path(task), method: :delete %>
    </li>
  <% else %>
    <li>[  ]
        <!-- Goes to show -->
        <%= link_to task.name, task_path(task) %>
        <%= link_to "x", task_path(task), method: :delete %>
    </li>
  <% end %>
<% end %>
</ul>

<%= link_to "Add new task", "/tasks/new" %>
