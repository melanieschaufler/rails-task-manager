<h1>My Tasks</h1>

<ul>
<% @tasks.each do |task| %>
  <% if task.completed == true %>
    <li>[x]
      <!-- Goes to show -->
      <%= link_to task.name, task_path(task) %>
    </li>
  <% else %>
    <li>[  ]
        <!-- Goes to show -->
        <%= link_to task.name, task_path(task) %>
    </li>
  <% end %>
<% end %>
</ul>
